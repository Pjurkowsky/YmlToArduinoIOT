board:
    platform: esp32:esp32
    type: esp32doit-devkit-v1
    port: /dev/ttyUSB0
inputs:
    - name: button_1
      mode: ANALOG
      type: BUTTON
      pin: 4
outputs:
    - name: led_1
      mode: ANALOG
      pin: 2
constants:
    - name: pi
      value: 3.14
rules:
    - if: button_1
      then: SET led_1 ON

